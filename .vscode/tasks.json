  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create container",
      "type": "shell",
      "command": "docker build -t time-attack:BE ./;docker rm time-attack-container;docker create --name time-attack-container -p 3000:3000 -p 9229:9229 -v ${workspaceFolder}/app:/app time-attack:BE",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Docker Container",
      "type": "shell",
      "command": "docker start time-attack-container",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Stop Docker Container",
      "type": "shell",
      "command": "docker stop time-attack-container",
      "problemMatcher": []
    }
  ]
}
