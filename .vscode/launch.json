{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "port": 9229,
      "address": "host.docker.internal",
      "preLaunchTask": "Run Docker Container",
      "postDebugTask": "Stop Docker Container",
      "restart": true,
      "localRoot": "${workspaceFolder}/app",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "console": "internalConsole"
    },
    {
      "name": "Containers: Node.js Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node",
      "node": {
        "package": "${workspaceFolder}/app/package.json",
        "localRoot": "${workspaceFolder}/app"
      }
    }
  ]
}
